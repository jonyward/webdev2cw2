<html>
    <head>
    {{>header}}
    </head>
    <body>
    <nav class="navbar navbar-dark bg-dark navbar-fixed-top" style="background-color: #e8d3b9;">
    {{>staffnavbar}}
    </nav>
    <div style="margin-top:100px">
    <h1>Enter a new dish</h1>
    <form method="post" role="form" action="/new">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" placeholder="Please enter a dish name" required>
        <label for="description">Description:</label>
        <input type="text" id="description" name="description" placeholder="Please enter a dish description" required>
        <label for="ingredients">Ingredients:</label>
        <input type="text" id="ingredients" name="ingredients" placeholder="Please enter dish ingredients" required>
        <label for="ingredients">Allergens:</label>
        <input type="text" id="allergens" name="allergens" placeholder="Please enter any any Allergens" required>
        <label for="price">Price:</label>
        <input type="float" id="price" name="price" placeholder="Please enter dish price" required>
        <label for="type">Type:</label>
        <select name="type" id="type">
            <option value="Dinner">Dinner</option>
            <option value="Lunch">Lunch</option>
            <option value="Special">Special</option>
        </select>
        <label for="availability">Availability:</label>
        <select name="availability" id="availability">
            <option value="True">True</option>
            <option value="False">False</option>
        </select>
        <br><br>
        <input type="submit" value="Submit">
    </form>
    <h1>Dinner Menu</h1>
    {{#dinner}}
        <h2>{{name}}</h2>
        <p>
            Description: {{description}} <br>
            Ingredients: {{ingredients}} <br>
            Allergens: {{allergens}} <br>
            Price: £{{price}} <br>
            Availability: {{availability}} <br></p>
        <a href="/edit/{{_id}}">Update Dish</a>
    {{/dinner}}
    <h1>Lunch Menu</h1>
    {{#lunch}}
        <h2>{{name}}</h2>
        <p>
            Description: {{description}} <br>
            Tngredients: {{ingredients}} <br>
            Allergens: {{allergens}} <br>
            Price: £{{price}} <br>
            Availability: {{availability}} <br></p>
        <a href="/edit/{{_id}}">Update Dish</a>
    {{/lunch}}
    <h1>Specials Menu</h1>
    {{#special}}
        <h2>{{name}}</h2>
        <p>
            Description: {{description}} <br>
            Ingredients: {{ingredients}} <br>
            Allergens: {{allergens}} <br>
            Price: £{{price}} <br>
            Availability: {{availability}} <br></p>
        <a href="/edit/{{_id}}">Update Dish</a>
    {{/special}}
    </div>
    </body>
</html>